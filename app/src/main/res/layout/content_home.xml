                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bbsearch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="30dp"
                        android:text="Speedometer"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNearByPlaces"
                android:layout_width="250dp"
                android:layout_height="148dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="100"

                android:background="@drawable/square_border"

                android:clickable="true"
                android:elevation="40dp"
                android:focusable="true"
                android:translationZ="3dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="3.5dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/asdearch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="30dp"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/places"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/asdearch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="30dp"
                        android:text="Near Places"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trafficFinder"
                android:layout_width="250dp"
                android:layout_height="148dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"

                android:layout_marginBottom="15dp"
                android:layout_weight="100"

                android:background="@drawable/square_border"


                android:clickable="true"
                android:elevation="40dp"
                android:focusable="true"
                android:translationZ="3dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="3.5dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ttsearch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="30dp"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/trafficfinder"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ttsearch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="30dp"
                        android:text="Traffic Finder"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-20dp"
            android:layout_weight="100"
            android:orientation="horizontal"
            android:weightSum="300">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardShare"
                android:layout_width="250dp"
                android:layout_height="148dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"

                android:layout_marginRight="5dp"

                android:layout_marginBottom="15dp"
                android:layout_weight="100"

                android:background="@drawable/square_border"


                android:clickable="true"
                android:elevation="40dp"
                android:focusable="true"
                android:translationZ="3dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="3.5dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/bbsearcch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="30dp"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/share"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bbsearcch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="30dp"
                        android:text="Share"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRating"
                android:layout_width="250dp"
                android:layout_height="148dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
